{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es7", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
